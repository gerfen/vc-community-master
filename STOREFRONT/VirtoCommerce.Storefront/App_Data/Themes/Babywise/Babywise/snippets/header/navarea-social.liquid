	{% unless settings.social_youtube_url == blank %}
	<a href="{{ settings.social_youtube_url }}" title="Follow us on YouTube" target="_blank"><span class="{{ social_icon_prefix }}social-icon-youtube{{ settings.social_icon_suffix }}"></span></a>
	{% endunless %}
	{% unless settings.social_tumblr_url == blank %}
	<a href="{{ settings.social_tumblr_url }}" title="Follow us on Tumblr" target="_blank"><span class="{{ social_icon_prefix }}social-icon-tumblr{{ settings.social_icon_suffix }}"></span></a>
	{% endunless %}
	{% unless settings.social_wordpress_url == blank %}
	<a href="{{ settings.social_wordpress_url }}" title="Come visit our blog" target="_blank"><span class="{{ social_icon_prefix }}social-icon-wordpress{{ settings.social_icon_suffix }}"></span></a>
	{% endunless %}
	{% unless settings.social_featured_blog == blank %}
	<a href="/blogs/{{ settings.social_featured_blog }}.atom" title="Subscribe to our blog" target="_blank"><span class="{{ social_icon_prefix }}social-icon-feed{{ settings.social_icon_suffix }}"></span></a>
	{% endunless %}
	{% unless settings.social_contact_email == blank %}
	<a href="mailto:{{ settings.social_contact_email }}" title="Email us" target="_blank"><span class="{{ social_icon_prefix }}social-icon-email{{ settings.social_icon_suffix }}"></span></a>
	{% endunless %}	
</div>
{% endif %}