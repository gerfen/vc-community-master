    display: block;
    width: 100% !important;
    float: none !important;
    margin-top: $gutter/2 !important;
    margin-bottom: $gutter/2 !important;
    margin-left: auto !important;
    margin-right: auto !important;
    clear: both;
    @extend .clear-after;
