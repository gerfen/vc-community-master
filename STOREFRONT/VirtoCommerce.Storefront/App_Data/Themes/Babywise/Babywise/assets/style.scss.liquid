    position: absolute;
    top: 100%;
    left: -0.5 * $gutter;
    background-color: lighten( $background-color, 15% );
    border: 1px solid darken( $background-color, 15% );
    -webkit-box-shadow: 0px 1px 1px 0px rgba(50, 50, 50, 0.2);
