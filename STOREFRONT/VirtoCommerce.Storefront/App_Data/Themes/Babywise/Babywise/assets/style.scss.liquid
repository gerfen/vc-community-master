/* CSS triangle at the top of drop-down menus. */
nav ul ul li:first-child a:after {
  content: '';
  position: absolute;
  top: -6px;
  left: 50%;
  margin-left: -6px;
  border-left: 6px solid transparent;
  border-right: 6px solid transparent;
  border-bottom: 6px solid lighten( $background-color, 15% );
